@model Couche_SysIntegFO.Models.Products
@using System.Security.Claims


@{
    ViewData["Title"] = "Product Details";
    var userRole = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;

}

<style>
    .action-btn {
        display: inline-block;
        background-color: black;
        color: white;
        padding: 6px 16px;
        margin-right: 8px;
        border: none;
        border-radius: 6px;
        text-decoration: none;
        transition: 0.3s ease;
        font-size: 0.9rem;
    }

        .action-btn:hover {
            background-color: white;
            color: black;
            border: 1px solid black;
            text-decoration: none;
        }

    .btn-primary {
        background-color: black;
        border: none;
        border-radius: 8px;
        padding-left: 24px;
        padding-right: 24px;
    }

        .btn-primary:hover {
            background-color: white;
            color: black;
            border: 1px solid black;
        }

    .btn-secondary {
        border-radius: 8px;
        padding-left: 24px;
        padding-right: 24px;
    }
</style>


<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName" />
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <h4 class="text-success">$@Model.ProductPrice</h4>
            <p class="mt-3">@Model.ProductDescription</p>
            <p><strong>In Stock:</strong> @Model.ProductStock</p>

            @if (userRole != "Admin")
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductID" />
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 mt-3">
                        <i class="fas fa-cart-plus"></i>
                        <span>Add to Cart</span>
                    </button>
                </form>
            }
            else
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" onsubmit="return false;">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 mt-3 disabled" style="pointer-events: none; opacity: 0.6; cursor: not-allowed;" disabled>
                        <i class="fas fa-cart-plus"></i>
                        <span>Add to Cart</span>
                    </button>
                </form>
                <p class="text-info">As an administrator, you cannot add items to the cart.</p>
            }

            <a href="/" class="btn btn-secondary mt-2">Back to Store</a>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
